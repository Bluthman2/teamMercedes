          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
<div class="container">
  <h2>Cars</h2>
  <p>Here are the cars in the database:</p>            
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>VIN</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0; i<cars.length; i++) {%>
        <tr>
           <td><%= cars[i].id %></td>
           <td><%= cars[i].vin %></td>
           <td><%= cars[i].type %></td>
        </tr>
        <% } %>
    </tbody>
  </table>
</div>

</body>
</html>
